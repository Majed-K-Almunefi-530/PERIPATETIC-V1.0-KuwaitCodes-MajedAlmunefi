<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12222C"
    tools:context=".Africainfoorbook">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_shade"
        android:text="Please choose one"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="40dp"
        android:layout_marginTop="30dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/bookticuk"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="225dp"
        android:backgroundTint="#8B2F2F"
        >


        <ImageView
            android:id="@+id/tic"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:src="@drawable/booktickets"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/infouk"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="425dp"
        android:backgroundTint="#8B2F2F"
        >


        <ImageView
            android:id="@+id/in"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:src="@drawable/info"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/gohomeuk"
        android:layout_width="174dp"
        android:layout_height="40dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:backgroundTint="#8B2F2F"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Home"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30dp"
            android:fontFamily="@font/cinzel_decorative"
            android:textColor="#FFFF"
            />




    </androidx.cardview.widget.CardView>


</RelativeLayout>