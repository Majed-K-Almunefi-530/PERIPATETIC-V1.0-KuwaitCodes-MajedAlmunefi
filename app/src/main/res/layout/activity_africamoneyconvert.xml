<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12222C"
    tools:context=".Africamoneyconvert"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_shade"
        android:text="Press the money sign to convert"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="40dp"
        android:id="@+id/kuku"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="40dp"
        android:background="#C61818"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/kuku"
        android:layout_marginTop="220dp"
        android:backgroundTint="#90BA2025"

        >

        <EditText
            android:id="@+id/kuwaitidinar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:hint=" enter Kuwaiti dinar"
            android:textSize="20dp"
            android:textColor="#FFFF"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/convert"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:backgroundTint="#90BA2025"
        >


        <ImageView
            android:id="@+id/callus"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:src="@drawable/money"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="40dp"
        android:background="#C61818"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/convert"
        android:layout_marginTop="150dp"
        android:backgroundTint="#90BA2025"

        >

        <TextView
            android:id="@+id/singadollar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:hint="South African Rand"
            android:textSize="20dp"
            android:textColor="#FFFF"
            android:gravity="center"
            />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        app:itemBackground="@color/favcolor"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white" />

</RelativeLayout>