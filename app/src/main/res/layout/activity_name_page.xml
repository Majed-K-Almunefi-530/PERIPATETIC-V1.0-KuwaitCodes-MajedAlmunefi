<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Name_page"
    android:background="#12222C"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/farsan"
        android:text="Hello user!"
        android:textColor="#FFFF"
        android:layout_marginTop="30dp"
        android:textSize="55dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/farsan"
        android:text="Please enter your name"
        android:textColor="#FFFF"
        android:layout_marginTop="120dp"
        android:textSize="35dp"
     />

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="80dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="40dp"
        android:background="#C61818"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#90BA2025"

        >

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:hint="Name here"
            android:textSize="20dp"
            android:textColor="#FFFF"
        />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/submitcardname"
        android:layout_width="174dp"
        android:layout_height="40dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:backgroundTint="#8B2F2F"
        >

        <TextView
            android:id="@+id/nextpagesubmit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Submit"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#FFFF"
            />




    </androidx.cardview.widget.CardView>








</RelativeLayout>